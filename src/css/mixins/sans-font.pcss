@define-mixin sans-font $weight: 400, $style: normal {
  font-family:
    "Golos Text",
    system-ui,
    -apple-system,
    BlinkMacSystemFont,
    "Segoe UI",
    Roboto,
    Oxygen,
    Ubuntu,
    Cantarell,
    "Open Sans",
    "Helvetica Neue",
    sans-serif;
  font-optical-sizing: auto;
  font-weight: $weight;
  font-style: $style;
}
